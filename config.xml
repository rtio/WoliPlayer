<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "br.com.jupitertec.woliplayer"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>WoliPlayer</name>

    <description>
        Player de audio. Em homenagem a Iury Lucas Rebelo.
    </description>

    <author href="http://jupitertec.com.br" email="meneses.tio@gmail.com">
        Rafael S. Meneses
    </author>
  <gap:platform name="android" />
  <gap:platform name="winphone" />

  <preference name="phonegap-version" value="3.5.0" />

  <icon src="icon/icon-256-195.png" />  

  <icon src="icon/icon-64-48.png" gap:platform="android" gap:qualifier="ldpi" />
  <icon src="icon/icon-128-97.png" gap:platform="android" gap:qualifier="mdpi" />
  <icon src="icon/icon-256-195.png" gap:platform="android" gap:qualifier="hdpi" />
  <icon src="icon/icon-512-390.png" gap:platform="android" gap:qualifier="xhdpi" />

  <icon src="icon/icon-256-195.png" gap:platform="winphone" />
  <icon src="icon/icon-512-390.png" gap:platform="winphone" gap:role="background" />

  <gap:splash src="icon/icon-256-195.png" />


</widget>